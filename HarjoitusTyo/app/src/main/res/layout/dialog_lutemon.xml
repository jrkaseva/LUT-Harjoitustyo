<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:background="#95CA58"
    android:orientation="vertical"
    android:padding="20sp"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/dialogImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_lutemon_foreground"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/dialogTVIdNameColor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="[id] Name (Colour)"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogTVAtk"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#7CA84A"
                android:text="ATK: X"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/dialogTVExp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="EXP: X"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/dialogTVWins"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#7CA84A"
                android:text="WINS: X"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogTVDef"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#7CA84A"
                android:text="DEF: X"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/dialogTVHp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="HP: X/X"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/dialogTVLosses"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#7CA84A"
                android:text="LOSSES: X"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnDeleteLutemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        tools:ignore="HardcodedText" />

</LinearLayout>