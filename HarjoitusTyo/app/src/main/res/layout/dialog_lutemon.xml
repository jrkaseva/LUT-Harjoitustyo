<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialogLayout"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:background="#95CA58"
    android:orientation="vertical"
    android:padding="20sp">

    <ImageView
        android:id="@+id/dialogImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_lutemon_foreground" />

    <TextView
        android:id="@+id/dialogTVIdNameColor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="[id] Name (Colour)" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogTVAtk"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#7CA84A"
                android:text="ATK: X" />

            <TextView
                android:id="@+id/dialogTVExp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="EXP: X" />

            <TextView
                android:id="@+id/dialogTVWins"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#7CA84A"
                android:text="WINS: X" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialogTVDef"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#7CA84A"
                android:text="DEF: X" />

            <TextView
                android:id="@+id/dialogTVHp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="HP: X/X" />

            <TextView
                android:id="@+id/dialogTVLosses"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#7CA84A"
                android:text="LOSSES: X" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>