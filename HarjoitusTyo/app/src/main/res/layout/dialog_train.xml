<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/textViewInfo"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="#57ccaa">

<Button
    android:id="@+id/btnExitTraining"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/exit"
    android:layout_gravity="center"
    tools:layout_editor_absoluteX="247dp"
    tools:layout_editor_absoluteY="0dp"
    android:visibility="gone"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewAttackerTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50sp"
        android:contentDescription="@string/attacker_image"
        app:srcCompat="@mipmap/ic_lutemon_pink_foreground" />

    <ImageView
        android:id="@+id/imageViewDefenderTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/defender_image"
        app:layout_constraintTop_toTopOf="@+id/imageViewAttackerTraining"
        app:srcCompat="@mipmap/ic_lutemon_black_foreground"
        tools:layout_editor_absoluteX="139dp" />

</LinearLayout>


    <Button
    android:id="@+id/btnRoundTraining"
    android:backgroundTint="#000"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Attack" />

<TextView
    android:id="@+id/textViewWinnerTraining"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:textAlignment="center" />

<TextView
    android:id="@+id/textViewFightTraining"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:text="ATTACKER (ATK) | DEFENDER (HP)\n----------------------------------------------------------"
    android:textAlignment="center" />

</LinearLayout>